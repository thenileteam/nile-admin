{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "./build",
    "module": "commonjs",
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules"]
  }
  